@page "/"
@using System.ComponentModel.DataAnnotations
@rendermode InteractiveServer
@using souschef_fe.Services
@* @inject ICrudSvc<User> UserService *@
@* @inject ILogger<ClientUserService> Logger *@

@using souschef_core.Model
@using souschef_core.Services


<PageTitle>Home</PageTitle>

<h1 style="text-align: center">Welcome to Sous Chef</h1>

<h3 style="text-align: center">Please Log In</h3>

<div class="d-flex justify-content-center align-items-center">
    <div class="card text-center" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">Log In</h5>
            <EditForm Model="@log" OnValidSubmit="HandleValidLogin">
                <DataAnnotationsValidator />
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <InputText id="username" class="form-control" @bind-Value="@log.username" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <InputText id="password" class="form-control" @bind-Value="@log.password" />
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            </EditForm>
        </div>
    </div>
</div>

@code {

    [Parameter] public LogIn log { get; set; } = new();
    
